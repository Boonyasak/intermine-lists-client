/* Growl-style notifications */
ul#notifications
    position: fixed
    top: 10px
    right: 20px
    z-index: 1
    color: #000
    
    li
        margin-bottom: 5px
        list-style-type: none
        border: 1px solid #EEE
        border-bottom-color: #CACACA
        border-radius: 3px
        box-shadow: 0 1px 6px 0 rgba(0,0,0,0.2)
        position: relative
        width: 250px
        background: #FFF
        
        div
            padding: 15px 20px
            
            h1
                margin: 0 0 5px 0
                font-size: 16px
                font-weight: normal
            a
                position: absolute
                top: 3px
                right: 10px
                cursor: pointer
                color: #888
                font-size: 16px
                font-weight: bold

                &:hover
                    text-decoration:none
            p
                margin: 0
                padding: 0