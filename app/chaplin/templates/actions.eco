<!-- organise or create a new folder? -->
<% if @checked isnt 0: %>
    <% if @show.organiseLists: %>
        <a class="organise btn"><span class="icon-hdd"></span> Organise</a>
    <% end %>
<% else: %>
    <% if @show.newFolder: %>
        <a class="new-folder btn btn-primary"><span class="icon-folder-close"></span> New folder</a>
    <% end %>
<% end %>